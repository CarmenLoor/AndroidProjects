<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="15dp"
              android:background="@drawable/shape_rectangle_grey"
              android:orientation="vertical"
              android:padding="15dp">

    <FrameLayout
        android:id="@+id/select_material_frame_paperboard"
        style="@drawable/selector_button_materials"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:clickable="true"
        android:fadingEdgeLength="10dp"
        android:tag="1">

        <TextView
            android:id="@+id/partial_material_text_paperboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:clickable="false"
            android:paddingBottom="20dp"
            android:text="@string/program_ride_paperboard"
            android:textColor="@color/charcoal_grey"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/partial_material_image_paperboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:paddingBottom="30dp"
            android:src="@mipmap/ic_paperboard"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/quantity_quantity"
                android:textColor="@color/steel_grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/partial_material_image_button_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_dialog_info"/>

                <TextView
                    android:id="@+id/partial_material_text_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="1"
                    android:textColor="@color/charcoal_grey"
                    android:textSize="22sp"/>

                <ImageButton
                    android:id="@+id/partial_material_image_button_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_dialog_info"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingStart="15dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/quantity_container"
                android:textColor="@color/steel_grey"/>

            <Spinner
                android:id="@+id/partial_material_spinner_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="-15dp"
                android:layout_marginStart="-10dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/partial_material_image_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_menu_camera"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:text="@string/quantity_instructions_2"
            android:textColor="@color/charcoal_grey"
            android:textSize="14sp"/>

    </LinearLayout>


</LinearLayout>
